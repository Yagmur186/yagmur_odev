    fiyat=fiyat-miktar;
    cout<<"Evet indirim yapildi, yeni fiyati:"<<fiyat<<endl;
}
void fiyatarttir(int miktar){
    fiyat=fiyat+miktar;
    cout<<"Evin fiyati azaltildi, yeni fiyati:"<<fiyat;

Pazarlik(string xadsoyad, int yeskifiyat, int zyenifiyat, int windirim){
 adsoyad = xadsoyad;
 eskifiyat = yeskifiyat;
 yenifiyat= zyenifiyat;
 indirim= windirim;

}
};
